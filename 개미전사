#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int memo[10000];
int main() {
    int n;
    cin >> n;

    vector<int> box = { 1,3,1,5};//식량창고


    memo[0] = box[0];
    memo[1] = max(box[0], box[1]);

    for (int i = 2; i < n; i++)
    {
        memo[i] = max(memo[i - 1], memo[i - 2] + box[i]);
    }

    cout << memo[n-1];




    return 0;
}
